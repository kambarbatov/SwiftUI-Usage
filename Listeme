class oluşturama 

import Foundation

class ulkeler: Identifiable {
    var ad : String?
    
    init (){
        
    }
    
    init(ad: String? = nil) {
        self.ad = ad
    }
}
-----------------------------------------------------------


import SwiftUI

struct sabitlisteleme: View {
    @State private var ulkelerlistesi = [ulkeler]()
    
    
    //kaydırak silme metudu
    func sil (at offset: IndexSet){
        _ = ulkelerlistesi[offset.first!]
        ulkelerlistesi.remove(at: offset.first!)
    }
    
    var body: some View {
      /*  List{
            ItemTasarim(isim: "Apple", resim: "circle.fill")
                .onTapGesture {
                    print("güneş 1")
                }
            ItemTasarim(isim: "kotlin", resim: "square.and.arrow.up")
                .onTapGesture {
                    print("tıklanma durumu")
                }
        }*/
        
        /*
        
        //Dikey Listemel
        ScrollView{
            LazyVGrid(
                columns: [
                    //bir satırda kaçtane olacak onu geliler
                    GridItem(.flexible()),
                    GridItem(.flexible())
                ],spacing: 20)
            {
                Item2Tasarim(isim: "yeni", resim: "tek")
                Item2Tasarim(isim: "yeni", resim: "tek")
                Item2Tasarim(isim: "yeni", resim: "tek")
            }
        }.padding(20)
        
        //yatay Listeme
        ScrollView{
            LazyHStack{
                ForEach(0..<10){ sayi in
                    Text("\(sayi)")
                        .font(.headline)
                        .padding()
                        .background(Color.blue)
                        .foregroundColor(.white)
                        .cornerRadius(10)
                }
            }
        }*/
        
        NavigationStack{
            List{
                
                ForEach(ulkelerlistesi){ulke in
                    
                    //detay saysaına gitme 
                    NavigationLink(destination: ulkedetay(ulke: ulke)){
                        ulkeItem(ulke: ulke)
                        //item tıklanma
                            .onTapGesture {
                               
                            }
                    }
                    //silme metudu
                }.onDelete(perform: sil)
            }.listStyle(PlainListStyle()) //klasik görümğün için
            .navigationTitle("ülke")
            
            //1 den ona kadar listele
            List{
                ForEach(0..<10){ sayi in
                    Text("asyi \(sayi)")
                }
            }//kenarlı boşlku yan idinamik listelme
            
            
        }.onAppear{
            var liste = [ulkeler]()
            let u1 = ulkeler(ad: "test")
            let u2 = ulkeler(ad: "türkiye")
            liste.append(u1)
            liste.append(u2)
            
            
            ulkelerlistesi = liste
        }
        
        
    }
}


struct ItemTasarim: View {
    var isim : String
    var resim : String
    var body : some View {
        HStack {
            Image(systemName: resim)
                .resizable()
                .frame(width: 50, height: 50)
            Text(isim)
        }
    }
}

struct Item2Tasarim: View {
    var isim : String
    var resim : String
    var body : some View {
        VStack {
            Image(systemName: resim)
                .resizable()
                .frame(width: 50, height: 50)
            Text(isim)
        }.frame(width: 100, height: 100)
            .border(.gray)
    }
}

struct ulkeItem : View {
    var ulke = ulkeler()
    var body : some View {
        HStack {
            Text(ulke.ad!)
            Spacer()
            Text("seç")
                .foregroundStyle(.red)
                .onTapGesture {
                    print("seç olarak Tıklandı")
                }
        }
    }
}

#Preview {
    sabitlisteleme()
}
